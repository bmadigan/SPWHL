<% title "Articles" %>

<table class="admin-tbl" cellspacing="0">
  <tr>
    <th width="450">Title</th>
		<th colspan="2">Manage</th>
  </tr>
  <% for article in @articles %>
    <tr>
      <td><%= article.article_title %></td>

			<td><%= button_to "E", edit_article_path(article), :method => :get %></td>
			<td><%= button_to "X", article, :method => :delete, :confirm => "Are you sure?" %></td>

    </tr>
  <% end %>
</table>

<p><%= link_to "New Article", new_article_path %></p>
