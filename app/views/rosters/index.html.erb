<% title "Rosters" %>

<table>
  <tr>
    <th>Team</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Position</th>
    <th>Jersey Number</th>
  </tr>
  <% for roster in @rosters %>
    <tr>
      <td><%= roster.team_id %></td>
      <td><%= roster.first_name %></td>
      <td><%= roster.last_name %></td>
      <td><%= roster.position %></td>
      <td><%= roster.jersey_number %></td>
      <td><%= link_to "Show", roster %></td>
      <td><%= link_to "Edit", edit_roster_path(roster) %></td>
      <td><%= link_to "Destroy", roster, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Roster", new_roster_path %></p>
