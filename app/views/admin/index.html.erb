	<% title "Webmaster Dashboard" %>
	
	<table border="0" class="dashboard" cellpadding="8" style="font-size:1.3em;">
	<tr>
		<td width="400"><%= link_to "Website Content Pages", page_admin_path %></td>
		<td width="400"><%= link_to "News/Updates Articles", article_admin_path %></td>
	</tr>
	<tr>
		<td width="400"><%= link_to "League Manager", league_admin_path %></td>
		<td width="400"><%= link_to "League Schedules", schedule_admin_path %></td>
	</tr>
	<tr>
		<td width="400"><%= link_to "All Teams", teams_path %></td>
		<td width="400"><%= link_to "User Accounts", users_path %></td>
	</tr>
	<tr>
		<td width="400"><%= link_to "Seasons", seasons_path %></td>
		<td width="400"></td>
	</tr>
	</table>
	<br><br>

<% end %>

